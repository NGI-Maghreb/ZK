<language-addon>
    <addon-name>zhighcharts</addon-name>
  	<version>
		<version-class>org.ngi.zhighcharts.Version</version-class>
		<version-uid>0.3.0</version-uid>
		<zk-version>5.0.11</zk-version><!-- or later -->
	</version>
    
	<language-name>xul/html</language-name>
	<component>
		<component-name>zhighcharts</component-name> <!-- required -->
		<component-class>org.ngi.zhighcharts.ZHighCharts</component-class> <!-- required -->
		<widget-class>zhighcharts.ZHighCharts</widget-class> <!-- required -->
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/zhighcharts.js</mold-uri>
			<css-uri>css/zhighcharts.css.dsp</css-uri>
		</mold>
	</component>
	<component>
		<component-name>zgauge</component-name> <!-- required -->
		<component-class>org.ngi.zhighcharts.ZGauge</component-class> <!-- required -->
		<widget-class>zhighcharts.ZGauge</widget-class> <!-- required -->
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/gauge.js</mold-uri>
		</mold>
	</component>
</language-addon>